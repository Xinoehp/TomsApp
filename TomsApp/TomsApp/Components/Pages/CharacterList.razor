@using TomsApp.Models

<MudNavMenu>
	<MudCard>
		<MudText Typo="Typo.h6">Characters</MudText>
		<MudCardContent>
			<MudButton StartIcon="@Icons.Material.Filled.Create">New Character</MudButton> @* *@
		</MudCardContent>

		@foreach (Character character in _characterService.Characters)
		{
			<MudCardContent Style="display: flex;">
				<MudTextField T="string" @bind-Value="@character.Name" />
				<MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => ClearCharacterSelected(character))" />
			</MudCardContent>
		}
	</MudCard>

</MudNavMenu>